<% provide(:title, "SignUp") %>

<div class="container border border-dark shadow w-50 rounded-2 p-2 mt-4 ">

<h1 class="text-center">Sign Up</h1>
<div class="text-start w-50 mx-auto" >
<%= form_with(model: @user, local: true) do |f| %>

<%= f.label :email, "Email" %>
<br>
<%= f.email_field :email %>
<br>
<br>

<%= f.label :password, "Password" %>
<br>
<%= f.password_field :password %>
<br>
<br>

<%= f.label :password_confirmation, "Confirm Password" %>
<br>
<%= f.password_field :password_confirmation %>
<br>
<br>

<%= f.submit "Create Account", class: "btn btn-outline-success" %>
<br>
<%= link_to "have account?", login_path %>


<% end %>
</div>
</div>