<div class="container border border-dark shadow w-50 rounded-2 p-2 mt-4 ">

<h1 class="text-center">Login</h1>
<div class="text-start w-50 mx-auto" >
<%= form_with(url: login_path, scope: :login, local: true) do |f| %>

<%= f.label :email, "Email" %>
<br>
<%= f.email_field :email %>
<br>
<br>

<%= f.label :password, "Password" %>
<br>
<%= f.password_field :password %>
<br>
<br>

<%= f.submit "Login", class: "btn btn-outline-success" %>

<% end %>
</div>
</div>